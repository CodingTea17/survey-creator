<h5>for survey: <%=@survey.name %></h5>
<h2><%=@question.question %></h2>

<form action="/edit_question/<%=@question.id%>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="patch">
    <label for="question"> Update question to: </label>
    <input id="question" name="question" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-warning">Update question</button>
</form>

<form action="/edit_question/<%=@question.id%>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="delete">
  </div>
  <button type="submit" class="btn btn-danger">Delete</button>
</form>
