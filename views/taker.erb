<div class="row">
  <div class="col">
    <h4><%=@survey.name%></h4>
    <h2><%=@taker.name%></h2>
      <div class="card bg-light">
        <div class="card-body">
          <table class="table table-hover table-bordered">
            <thead class="thead text-white bg-dark">
              <tr>
                <th>Question</th>
                <th>Answer</th>
              </tr>
            </thead>
            <tbody>
              <% @answers.each do |answer| %>
                <tr class="table-light">
                  <td class="align-middle"><%= answer.question.question %></td>
                  <td><%= answer.answer %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</div>
<a href="/results/<%=@survey.id%>">See other results</a>
