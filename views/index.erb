<div class="row">
  <div class="col">
    <% if @surveys.any? %>
      <div class="card bg-light">
        <div class="card-body">
          <table class="table table-hover table-bordered">
            <thead class="thead text-white bg-dark">
              <tr>
                <th>Name</th>
                <th>Creator</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @surveys.each do |survey| %>
                <tr class="table-light">
                  <td class="align-middle"><%= survey.name %></td>
                  <td class="align-middle"><%= survey.author %></td>
                  <td style="text-align: center;">
                    <a href="/results/<%= survey.id %>">
                      <button class="btn btn-warning btn-block" type="button">View Results</button>
                    </a>
                  </td>
                  <td style="text-align: center;">
                    <a href="/create_taker/<%= survey.id %>">
                      <button class="btn btn-primary btn-block" type="button">Take Survey</button>
                    </a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>
