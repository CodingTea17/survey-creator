<div class="row">
  <div class="col">
    <% if @surveys.any? %>
      <div class="card bg-light">
        <div class="card-body">
          <table class="table table-hover table-bordered">
            <thead class="thead text-white bg-dark">
              <tr>
                <th>Name</th>
                <th>Creator</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @surveys.each do |survey| %>
                <tr class="table-light">
                  <td class="align-middle"><%= survey.name %></td>
                  <td class="align-middle"><%= survey.author %></td>
                  <td style="text-align: center;">
                    <a href="/create_questions/<%= survey.id %>">
                      <button class="btn btn-info btn-block" type="button">Add questions</button>
                    </a>
                  </td>
                  <td style="text-align: center;">
                    <a href="/survey_edit/<%= survey.id %>">
                      <button class="btn btn-info btn-block" type="button">Edit</button>
                    </a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="card bg-light">
      <div class="card-body">
        <h1>Create a new survey</h1>

        <form action="/create_survey" method="post">
          <div class="form-group">
            <label for="name">Survey title: </label>
            <input id="name" name="name" class="form-control" type="text">
          </div>

          <div class="form-group">
            <label for="author">Survey creator: </label>
            <input id="author" name="author" class="form-control" type="text">
          </div>
          <button type="submit" class="btn btn-warning">Create Survey</button>
        </form>
      </div>
    </div>
  </div>
</div>
